<%= form_for(@order,  class: 'form-horizontal') do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group required">
    <%= f.label :employee, class: 'col-sm-3 control-label' do %><sup>*</sup> Employee<% end %>
    <div class="col-sm-8">
      <%= f.collection_select :employee_id, Employee.all, :id, :name, {prompt: true}, {class: 'form-control', autocomplete: 'false'} %>
    </div>
  </div>

  <div class="form-group required">
    <%= f.label :total_price, class: 'col-sm-3 control-label' do %><sup>*</sup> Total price<% end %>
    <div class= "col-sm-8">
      <%= f.number_field :total_price, min: 0.0, step: 0.01, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group required">
    <%= f.label :num_units, class: 'col-sm-3 control-label' do %><sup>*</sup> Total price<% end %>
    <div class= "col-sm-8">
      <%= f.number_field :num_units, min: 1, step: 1, class: 'form-control' %>
    </div>
  </div>

  <div class="actions form-group">
    <%= f.submit %>
  </div>
<% end %>
